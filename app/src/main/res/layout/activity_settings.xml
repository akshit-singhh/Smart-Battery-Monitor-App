<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="true">

    <!-- Top App Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_back_button"
            android:padding="8dp"
            android:contentDescription="@string/back"
            android:src="@drawable/arrow_back_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
            app:tint="#4F46E5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved Settings"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toEndOf="@id/btnBack"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/refreshButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_syncbutton_50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/ivRefreshIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/autorenew_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                android:layout_marginEnd="6dp"
                app:tint="#4F46E5" />

            <TextView
                android:id="@+id/tvRefreshText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sync data"
                android:textColor="#4F46E5"
                android:textAllCaps="false"
                android:fontFamily="@font/regular"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Scrollable Form Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:padding="12dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:padding="16dp"
            android:background="@drawable/custom_outlined_button"
            android:elevation="1dp">

            <!-- Battery Capacity -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Battery Capacity (Ah)"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconTint="#4B5563"
                app:boxStrokeColor="#E5E7EB"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCapacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Voltage Offset -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Voltage Offset (V)"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconTint="#4B5563"
                app:boxStrokeColor="#E5E7EB"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVoltageOffset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Current Offset -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Offset (A)"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconTint="#4B5563"
                app:boxStrokeColor="#E5E7EB"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCurrentOffset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Battery SOC -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Battery SOC"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:paddingEnd="120dp"
                    app:startIconTint="#4B5563"
                    app:boxStrokeColor="#E5E7EB"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/calculateButtonLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@id/tilSoc"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/bg_syncbutton_50dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivCalculateIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/calculate_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                        android:layout_marginEnd="6dp"
                        app:tint="#4F46E5" />

                    <TextView
                        android:id="@+id/tvCalculateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculate"
                        android:textColor="#4F46E5"
                        android:textAllCaps="false"
                        android:fontFamily="@font/regular"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- mV per Amp -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mV per Amp"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconTint="#4B5563"
                app:boxStrokeColor="#E5E7EB"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMvPerAmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Current Deadzone -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Deadzone (A)"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconTint="#4B5563"
                app:boxStrokeColor="#E5E7EB"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCurrentDeadzone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Charging Threshold -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Charging Threshold (A)"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconTint="#4B5563"
                app:boxStrokeColor="#E5E7EB"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etChargeThreshold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Discharging Threshold -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Discharging Threshold (A)"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconTint="#4B5563"
                app:boxStrokeColor="#E5E7EB"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDischargeThreshold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ESP IP Display (Read-only) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEspIp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Saved IP"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconTint="#4B5563"
                app:boxStrokeColor="#E5E7EB"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEspIp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:backgroundTint="@android:color/transparent"
                    android:text="Your saved IP will appear here"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Status Text -->
            <TextView
                android:id="@+id/tvSettingsStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_above="@id/btnSaveSettings"
                android:gravity="center"
                android:text="Settings saved successfully."
                android:textSize="14sp"
                android:textColor="#000"
                android:padding="4dp" />

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                android:text="Save Settings"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/regular"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4C46FF"
                app:cornerRadius="50dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
