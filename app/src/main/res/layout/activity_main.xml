<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivWifiSignal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/theme_toggle_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/theme_light_dark"
            android:contentDescription="@string/theme_toggle_description"
            app:tint="?attr/colorOnBackground"
            app:layout_constraintEnd_toStartOf="@id/btnRecheckConnection"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/btnRecheckConnection"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/refresh"
            android:contentDescription="@string/refresh_data_description"
            app:tint="?attr/colorOnBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textAlignment="center"
            android:textColor="?attr/colorOnBackground"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/main_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp">

                <com.example.batterymonitor.views.GradientCircularProgressView
                    android:id="@+id/gradientProgress"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/tvLabelSOC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/gradientProgress"
                    android:layout_alignEnd="@+id/gradientProgress"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="54dp"
                    android:layout_marginEnd="80dp"
                    android:fontFamily="sans-serif-light"
                    android:text="SOC"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSOC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-light"
                    android:layout_centerInParent="true" />

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvConnectionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disconnected"
                    android:fontFamily="@font/regular"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/Disconnected" />

                <!-- Horizontal layout: IP first, then copy icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/tvEspIp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP: 192.168.1.99"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/btnEditIp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/edit_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                        android:contentDescription="edit_ip"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="?attr/colorOnSurface" />

                    <ImageView
                        android:id="@+id/btnSaveIp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/save_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                        android:contentDescription="save"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="?attr/colorOnSurface"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/btnCopyIp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/content_copy_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                        android:contentDescription="@string/copy_ip"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="?attr/colorOnSurface" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvEspMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="(Mode: A/P)"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp" />
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/key_metrics_title"
                android:textColor="?attr/colorOnBackground"
                android:textSize="24sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:scrollbars="none"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="8dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <!-- Voltage Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/lightbulb_on"
                                android:contentDescription="@string/voltage_description"
                                app:tint="#2979FF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/voltage_label"
                                android:textColor="#263238"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvVoltage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00.0V"
                                android:textColor="#000000"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Current Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/lightning_bolt"
                                android:contentDescription="@string/current_description"
                                app:tint="#00C853" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/current_label"
                                android:textColor="#263238"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvCurrent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0A"
                                android:textColor="#000000"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Power Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/flash"
                                android:contentDescription="@string/power_description"
                                app:tint="#FF9100" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/power_label"
                                android:textColor="#263238"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvPower"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0W"
                                android:textColor="#000000"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Battery Status Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="38dp"
                                android:src="@drawable/car_battery"
                                app:tint="#D50000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Battery Status"
                                android:textColor="#263238"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvBatteryStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Idle"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                android:text="@string/actions_title"
                android:textColor="?attr/colorOnBackground"
                android:textSize="24sp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginBottom="24dp"
                android:useDefaultMargins="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScanQr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:icon="@drawable/qrcode_scan"
                    app:iconPadding="8dp"
                    android:padding="12dp"
                    android:text="Scan QR"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:fontFamily="@font/regular"
                    android:background="@drawable/custom_outlined_button"
                    app:backgroundTint="@null"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:icon="@drawable/settings_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                    app:iconPadding="8dp"
                    android:padding="12dp"
                    android:background="@drawable/custom_outlined_button"
                    app:backgroundTint="@null"
                    app:rippleColor="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/saved_settings_button"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:fontFamily="@font/regular" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangeWiFi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:icon="@drawable/wifi_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                    app:iconPadding="8dp"
                    android:padding="12dp"
                    android:background="@drawable/custom_outlined_button"
                    app:backgroundTint="@null"
                    app:rippleColor="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/configure_wifi_button"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:fontFamily="@font/regular" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReboot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:icon="@drawable/restart_alt_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                    app:iconPadding="8dp"
                    android:padding="12dp"
                    android:background="@drawable/custom_outlined_button"
                    app:backgroundTint="@null"
                    app:rippleColor="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/reboot_device_button"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:fontFamily="@font/regular" />

            </GridLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/system_log_title"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="24sp"
                    android:fontFamily="@font/bold"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClearLogs"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear Logs"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/regular"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:backgroundTint="#F21B18"
                    app:cornerRadius="50dp"
                    app:iconTint="#B91C1C" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- ScrollView with log text -->
                    <ScrollView
                        android:id="@+id/svSerialLog"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:padding="16dp"
                        android:scrollbars="vertical">

                        <TextView
                            android:id="@+id/tvSerialLog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </ScrollView>

                    <!-- Copy icon button in top-right corner -->
                    <ImageButton
                        android:id="@+id/btnCopyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Copy"
                        android:src="@drawable/content_copy_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                        app:tint="#666" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>